dimensions      [0 0 0 1 0 0 0];


internalField   uniform 293;

boundaryField
{
    frontAndBack
    {
        type            zeroGradient;
    }
    topAndBottom
    {
        type            zeroGradient;
    }
    hot
    {
        type            uniformFixedValue;
        uniformValue    csvFile;
        uniformValueCoeffs
        {
            nHeaderLine     1;
            refColumn       0;
            componentColumns 1(1);
            separator       ",";
            mergeSeparators 0;
            file            "<constant>/temp_profile.csv";
        }
        value           uniform 500;
    }
    cold
    {
        type            fixedValue;
        value           uniform 300;
    }
}


