boundary
{
}

T
{
    internalField   uniform 500;

    boundaryField
    {
        ".*"
        {
            type            zeroGradient;
            value           uniform 300;
        }
        "procBoundary.*"
        {
            type            processor;
        }
        "sphere_to_.*"
        {
            type            compressible::turbulentTemperatureCoupledBaffleMixed;
            Tnbr            T;
            kappaMethod     solidThermo;
            value           uniform 500;
        }
    }

    sphere_to_oil
    {
        type            calculated;
        value           uniform 1e5;
    }
}



